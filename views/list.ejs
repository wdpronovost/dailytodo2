<%- include("header.ejs") -%>

    <header>
      <h1><%= kindOfDay %></h1>
    </header>
    
    <main>
      <div class="items__container">
        <div class="items__container__list">
          <% myListItems.forEach((item) => { %>
            <div class="items__container__list__item">
              <form class="form-list" action="/removeItem" method="post" >
                <input type="checkbox">
                <p id="<% item._id %>"><%= item.todo %></p>
                <button name="_id" value="<%= item._id %>" class="trash-btn" type="submit">
                <svg class="trash" aria-hidden="true" focusable="false" data-prefix="fas" data-icon="trash-alt" class="svg-inline--fa fa-trash-alt fa-w-14" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512"><path fill="currentColor" d="M32 464a48 48 0 0 0 48 48h288a48 48 0 0 0 48-48V128H32zm272-256a16 16 0 0 1 32 0v224a16 16 0 0 1-32 0zm-96 0a16 16 0 0 1 32 0v224a16 16 0 0 1-32 0zm-96 0a16 16 0 0 1 32 0v224a16 16 0 0 1-32 0zM432 32H312l-9.4-18.7A24 24 0 0 0 281.1 0H166.8a23.72 23.72 0 0 0-21.4 13.3L136 32H16A16 16 0 0 0 0 48v32a16 16 0 0 0 16 16h416a16 16 0 0 0 16-16V48a16 16 0 0 0-16-16z"></path></svg>
                </button>
              </form>
            </div>
          <% }); %>
        </div>
        <div class="items__container__add">
          <form class="form-add" action="/addtodo" method="post">
            <input type="text" name="newItem" placeholder="New Item" autocomplete="off" autofocus>
            <button type="submit">
              <svg aria-hidden="true" focusable="false" data-prefix="fas" data-icon="plus" class="svg-inline--fa fa-plus fa-w-14" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512"><path fill="currentColor" d="M416 208H272V64c0-17.67-14.33-32-32-32h-32c-17.67 0-32 14.33-32 32v144H32c-17.67 0-32 14.33-32 32v32c0 17.67 14.33 32 32 32h144v144c0 17.67 14.33 32 32 32h32c17.67 0 32-14.33 32-32V304h144c17.67 0 32-14.33 32-32v-32c0-17.67-14.33-32-32-32z"></path></svg>
            </button>
          </form>
        </div>
      </div>
    
    
    </main>
    
<%- include("footer.ejs") -%>
    
